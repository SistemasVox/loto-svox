generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Plano {
  FREE
  BASICO
  PLUS
  PREMIO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
}

model User {
  id                 Int                      @id @default(autoincrement())
  email              String                   @unique
  hashedPassword     String
  name               String?
  avatarUrl          String?
  plano_solicitado   String?
  data_solicitacao   DateTime?
  createdAt          DateTime                 @default(now())
  resetTokens        PasswordResetToken[]
  bets               Bet[]
  subscriptions      Subscription[]
  notifications      Notification[]
  emailVerifications EmailVerificationToken[]
}

model EmailVerificationToken {
  id         Int      @id @default(autoincrement())
  userId     Int
  token      String   @unique
  newEmail   String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([token])
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Bet {
  id        Int      @id @default(autoincrement())
  userId    Int
  concurso  Int
  dezenas   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([concurso])
}

model Subscription {
  id        Int                @id @default(autoincrement())
  userId    Int
  plano     Plano              @default(FREE)
  status    SubscriptionStatus @default(ACTIVE)
  startedAt DateTime           @default(now())
  expiresAt DateTime
  createdAt DateTime           @default(now())
  user      User               @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([isRead])
}

model TurboUsage {
  id     Int    @id @default(autoincrement())
  userId String
  date   String
  tab    String
  usos   Int

  @@unique([userId, date, tab])
}

model ApiKey {
  id         Int       @id @default(autoincrement())
  key        String    @unique
  name       String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime?
}